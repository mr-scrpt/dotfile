#!/bin/sh

create_session() {
  local session_name="$1"

  # Создаем новую сессию в фоновом режиме
  tmux new -s "$session_name" -d

 declare -a windows=(
    " :editor:nvim"
    " :server:"
    " :terminal:"
    " :infra:"
    " :file-manager:yy"
    " :docker:"
  )

  for i in "${!windows[@]}"; do
    window_number=$((i + 1))
    window_config="${windows[$i]}"
    
    # Разбиваем строку на иконку, название и команду
    IFS=':' read -r icon title command <<< "$window_config"
    
    # Полное название окна будет состоять из иконки и названия
    window_name=" $icon $title"
    
    # Для первого окна не нужно создавать новое, только переименовать
    if [ "$window_number" = "1" ]; then
      tmux rename-window -t "$session_name:1" "$window_name"
    else
      tmux new-window -t "$session_name"
      tmux rename-window -t "$session_name:$window_number" "$window_name"
    fi
    
    # Если указана команда, выполняем её
    if [ -n "$command" ]; then
      tmux send-keys -t "$session_name:$window_number" "$command" Enter
    fi
  done
  

  # Возвращаемся к первому окну
  tmux select-window -t "$session_name:1"
}

# Проверяем, передано ли имя сессии
if [ -z "$1" ]; then
  echo "Usage: tdev <session-name>"
  exit 1
fi

# Проверяем, находимся ли мы внутри tmux сессии
if [ -n "$TMUX" ]; then
  # Если мы в tmux, создаём новую сессию и переключаемся на неё
  create_session "$1"
  tmux switch-client -t "$1"
else
  # Если мы не в tmux, создаём сессию и присоединяемся к ней
  create_session "$1"
  tmux -2 attach-session -t "$1"
fi
